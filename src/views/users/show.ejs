<!DOCTYPE html>
<html>
  <head>
    <%- include('../static/partials/head.ejs') -%>
  </head>
  <body>
    <%- include('../static/partials/navbar.ejs') -%>

    <main class="container">

      <%- include('../static/partials/messages.ejs') -%>

      <h1><%= `${user.name}'s profile` %></h1>
      <hr>
      <h2> Latest Wikis</h2>
      <% if (currentUser.isAdmin() || currentUser.isPremium() ) { %>
      <form style="display:initial" action="/users/<%= currentUser.id %>/updateStandard" method="post">
        <button type="submit" class="btn btn-danger">Downgrade to Standard</button>
      </form>
      <% } %> 
      <% if(currentUser.role === 0) { %>
      <form style="display:initial" action="/users/payment" method="get">
        <button type="submit" class="btn btn-danger">Update to Premium</button>
      </form>
      <% } %>
    </main>

    <%- include('../static/partials/baseScripts.ejs') -%>

  </body>
</html>