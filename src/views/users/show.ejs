<!DOCTYPE html>
<html>
  <head>
    <%- include('../static/partials/head.ejs') -%>
  </head>
  <body>
    <%- include('../static/partials/navbar.ejs') -%>

    <main class="container">
      <%- include('../static/partials/messages.ejs') -%>

      <h1><%= `${user.name}'s profile` %></h1>
      <hr>
      <h2> Latest Wikis</h2>
      <% if (currentUser.isAdmin() || currentUser.isPremium() ) { %>
      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
        Downgrade to Standard
      </button>
      <form style="display:initial" action="/users/<%= currentUser.id %>/updateStandard" method="post">
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
              <h3>Are you sure?</h3>
              <p>Downgrading your account will make all of your <strong>PRIVATE</strong> wikis <strong>PUBLIC</strong></p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-danger">Downgrade to Standard</button>
              </div>
            </div>
          </div>
        </div>
      </form>
      <% } %> 
      <% if(currentUser.role === 0) { %>
      <form style="display:initial" action="/users/payment" method="get">
        <button type="submit" class="btn btn-primary">Upgrade to Premium</button>
      </form>
      <% } %>
    </main>

    <%- include('../static/partials/baseScripts.ejs') -%>

  </body>
</html>